        <result property="departmentId" column="department_id"/>        
        <result property="modified" column="modified"/>        
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="ActivityDepartmentRelation.columns">
	    <![CDATA[
		t_activity_department_relation.id,t_activity_department_relation.activity_id,t_activity_department_relation.department_id,t_activity_department_relation.modified
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="ActivityDepartmentRelation.insert" useGeneratedKeys="true" keyProperty="id">
   
        INSERT INTO t_activity_department_relation (
	        	id
		     	<if test="@Ognl@isNotNull(activityId)">
		        	,activity_id
		      	</if>
		     	<if test="@Ognl@isNotNull(departmentId)">
		        	,department_id
		      	</if>
		     	<if test="@Ognl@isNotNull(modified)">
		        	,modified
		      	</if>
        
        ) VALUES (
	        	#{id}
		     	<if test="@Ognl@isNotNull(activityId)">
		        	,#{activityId}
		      	</if>
		     	<if test="@Ognl@isNotNull(departmentId)">
		        	,#{departmentId}
		      	</if>
		     	<if test="@Ognl@isNotNull(modified)">
		        	,#{modified}
		      	</if>
        )
    
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="ActivityDepartmentRelation.update" >
    
        UPDATE t_activity_department_relation 
			<set>
		        <if test="@Ognl@isNotNull(activityId)">
		        		activity_id = #{activityId},
		        	</if>
		        	
		        <if test="@Ognl@isNotNull(departmentId)">
		        		department_id = #{departmentId},
		        	</if>
		        	
		        	
	        </set>
        WHERE 
	        id = #{id} 
			<if test="@Ognl@isNotNull(modified)">
		      and 
   			modified = #{modified}
		    </if>
   
	</update>

    <delete id="ActivityDepartmentRelation.delete">
    <![CDATA[
        DELETE FROM t_activity_department_relation 
        WHERE
        id = #{id} 
    ]]>
    </delete>
    <delete id="ActivityDepartmentRelation.deleteMultiple">

        DELETE FROM t_activity_department_relation 
        WHERE
        	id in
        	<foreach collection="list" item="id" index="index" open="(" close=")" separator="," >
#{id}			</foreach>
          
   
    </delete>
    <select id="ActivityDepartmentRelation.getById" resultMap="ActivityDepartmentRelation.RM">
		SELECT 
		<include refid="ActivityDepartmentRelation.columns" />
	    <![CDATA[
		    FROM t_activity_department_relation as t_activity_department_relation
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>
	
	<select id="ActivityDepartmentRelation.getByMultipleId" resultMap="ActivityDepartmentRelation.RM">
