	        	#{id}
		     	<if test="@Ognl@isNotNull(departmentId)">
		        	,#{departmentId}
		      	</if>
		     	<if test="@Ognl@isNotNull(recipient)">
		        	,#{recipient}
		      	</if>
		     	<if test="@Ognl@isNotNull(type)">
