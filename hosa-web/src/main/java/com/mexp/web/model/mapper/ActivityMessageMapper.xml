		        	</if>
		        	
		        <if test="@Ognl@isNotNull(recipient)">
		        		recipient = #{recipient},
		        	</if>
		        	
		        <if test="@Ognl@isNotNull(type)">
		        		type = #{type},
		        	</if>
		        	
		        <if test="@Ognl@isNotNull(category)">
		        		category = #{category},
		        	</if>
		        	
		        <if test="@Ognl@isNotNull(name)">
